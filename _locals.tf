# ==================================================================
# RESOURCE TIME
# ==================================================================

resource "time_static" "creation" {}

# ==================================================================
# GLOBAL LOCALS
# ==================================================================

locals {
  creation_time = time_static.creation.rfc3339
  # ==================================================================
  # AWS GENERAL
  # ==================================================================
  aws_account_id = data.aws_caller_identity.current.account_id
  # ==================================================================
  # AWS TAGS
  # ==================================================================
  aws_default_tags = {
    metadata_creation_time = local.creation_time
    metadata_managedby     = "terraform"
  }
}
